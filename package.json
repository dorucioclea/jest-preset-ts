{
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "blueprint": {
    "customPackageName": "jest-preset-ts",
    "description": "A Jest preset geared towards TypeScript, Angular, and Node.js projects",
    "group": "npm",
    "jsonFiles": {
      "package.json": {
        "files": [
          "jest-preset.js",
          "README.md",
          "LICENSE"
        ],
        "main": "jest-preset.js"
      },
      "tsconfig.json": {
        "outDir": "./"
      }
    },
    "name": "Jest Preset TypeScript",
    "overview": "This is a [Jest](https://jestjs.io/) preset that is used in all of the [Megabyte Labs projects](https://gitlab.com/megabyte-labs) that use Jest. Jest is a JavaScript/TypeScript testing framework maintained by Facebook. This particular Jest preset is built with support for TypeScript, Node.js, and Angular in mind. It includes several Jest plugins as well as improved HTML reports. Out of the box, it lints `.spec.ts` files, runs the tests, and includes fancy reporting.",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/jest-preset-ts",
      "gitlab": "https://gitlab.com/megabyte-labs/npm/configs/jest-preset-ts"
    },
    "slug": "jest-preset-ts",
    "subgroup": "config",
    "title": "TypeScript / Angular / Node.js Jest Preset"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/npm/configs/jest-preset-ts/-/issues"
  },
  "changelog": {
    "displayTypes": [
      "feat",
      "fix",
      "perf",
      "refactor",
      "revert"
    ],
    "showAuthor": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "helpUrl": "https://megabyte.space/docs/contributing/commits"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji-conventional"
    }
  },
  "dependencies": {
    "@jest-runner/electron": "^3.0.1",
    "@storybook/addon-storyshots": "^6.3.12",
    "@types/jest-json-schema": "^2.1.3",
    "expect-puppeteer": "^6.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.2.5",
    "jest-chain": "^1.1.5",
    "jest-dom": "^4.0.0",
    "jest-html-reporters": "^2.1.6",
    "jest-image-snapshot": "^4.5.1",
    "jest-json-schema": "^5.0.0",
    "jest-junit": "^13.0.0",
    "jest-preset-angular": "^10.1.0",
    "jest-puppeteer": "^6.0.0",
    "jest-runner-eslint": "^1.0.0",
    "jest-runner-groups": "^2.1.0",
    "jest-runner-prettier": "^0.3.7",
    "jest-runner-stylelint": "^2.3.7",
    "jest-runner-tsc": "^1.6.0",
    "jest-watch-master": "^1.0.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.1"
  },
  "description": "A Jest preset geared towards TypeScript, Angular, and Node.js projects",
  "devDependencies": {
    "@megabytelabs/eslint-config": "^1.0.6",
    "@megabytelabs/jest-preset": "^1.0.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@types/is-ci": "^3.0.0",
    "@types/node": "^16.11.6",
    "@washingtondc/development": "^1.0.2",
    "@washingtondc/prettier": "^1.0.0",
    "@washingtondc/release": "^0.0.2",
    "esbuild": "^0.12.29",
    "esbuild-node-externals": "^1.3.0",
    "eslint-config-strict-mode": "^1.0.28",
    "semantic-release-config": "^0.0.12",
    "sleekfast": "^0.0.1",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "eslintConfig": {
    "extends": "eslint-config-strict-mode",
    "rules": {
      "import/no-extraneous-dependencies": "warn",
      "max-len": "warn",
      "max-lines": "warn"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "homepage": "https://megabyte.space",
  "jest": {
    "preset": "@megabytelabs/jest-preset",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.config/assets/logo-jest-report.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "keywords": [
    "config",
    "jest",
    "linter",
    "mblabs",
    "megabytelabs",
    "professormanhattan",
    "reports",
    "tests",
    "typescript",
    "unit",
    "washingtondc"
  ],
  "license": "MIT",
  "lint-staged": {
    "**/!(logo).(jpg|png)": [
      "task image:compress --"
    ],
    "**/*": [
      "task lint:any --"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "main": "dist/main.js",
  "name": "jest-preset-ts",
  "nodemonConfig": {
    "exec": "tsc -p . && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,tsx,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  },
  "ntl": {
    "descriptions": {
      "help": "Display the Bodega Taskfile.yml interactive help menu",
      "prepare": "Hook, triggered by running npm install, that runs logic such as installing pre-commit hooks",
      "repair": "Fixes basic issues in projects that are having trouble running basic commands like 'task start'",
      "start": "Entrypoint for new developers that installs requirements and then runs 'task start'"
    }
  },
  "peerDependencies": {
    "typescript": "^4.4.4"
  },
  "prettier": "@washingtondc/prettier",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "master",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "semantic-release-config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/jest-preset-ts.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && cp -rT dist/ .",
    "help": "task --list",
    "prepare": "task common:husky",
    "repair": "bash <(curl -sS https://install.doctor/repair)",
    "start": "bash .config/start.sh",
    "test": "echo 'No tests to perform'"
  },
  "type": "commonjs",
  "typings": "dist/main.d.ts",
  "version": "1.0.0"
}
